@model WebConsumoAPI.Models.TurmaModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar Turma</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Turma" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="display:none" class="form-group">
                <label asp-for="id" class="control-label"></label>
                <input asp-for="id" class="form-control" />
                <span asp-validation-for="id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Curso ID</label>
                <input asp-for="curso_id" class="form-control" />
                <span asp-validation-for="curso_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ano</label>
                <input asp-for="ano" class="form-control" />
                <span asp-validation-for="ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Turma</label>
                <input asp-for="turma" class="form-control" />
                <span asp-validation-for="turma" class="text-danger"></span>
            </div>
            <label></label>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
        @if (TempData["mensagemErro"] != null)
        {
            <div class="field-error">
                @TempData["mensagemErro"]
            </div>
        }
    </div>
</div>
<label></label>
<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

